{% extends 'base.jinja' %}

{% block content %}
    <div class="container">
        <form class="form-signin" method="POST" enctype="application/x-www-form-urlencoded"
              accept-charset="utf-8">
            <h2 class="form-signin-heading">{{ title }}</h2>
            <textarea id="moments" name="moments" class="form-control" rows=10 placeholder="Moments"required autofocus>{{ moments }}</textarea>
            <br/>
            <div class="row">
                <div class="col-xs-6 text-left">
                    <a href="{{ 'diary'|url }}" class="btn btn-lg btn-default btn-block">Back</a>
                </div>
                <div class="col-xs-6 text-right">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
                </div>
            </div>
      </form>
    </div> <!-- /container -->
{% endblock %}
