{% extends 'base.jinja' %}

{% block content %}
    <h2>Login to Family Diary</h2>
    <form class="form-signin" action="{{ 'login'|url }}" method="POST" enctype="application/x-www-form-urlencoded"
          accept-charset="utf-8">
        <label for="email" class="sr-only">Email address</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email address" value="{{ email }}" required autofocus>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" value="{{ password }}" required>
        <button class="btn btn-lg btn-primary btn-block form-action" type="submit">Login</button>
  </form>
{% endblock %}
